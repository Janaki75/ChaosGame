<Window x:Class="ChaosGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChaosGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Canvas x:Name = "canvas" Background ="AliceBlue"></Canvas>
        <Button Content="Click here" Background ="DarkGreen"  Width="100" Height="40" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Button_Click" />
        <Label Margin="10" Height="50" Width=" 500" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Click the button to see this game in square shape"></Label>
    </Grid>
</Window>
